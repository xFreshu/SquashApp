---
import Layout from '../layouts/Layout.astro';

const changelog = [
  {
    version: "1.1",
    date: "8 września 2025",
    changes: [
      "Dodano grupowanie i nawigację po dniach w historii meczów.",
      "Ulepszono wygląd listy w historii meczów, dodając godzinę i czas trwania.",
      "Dodano przycisk do czyszczenia całej historii meczów.",
    ],
  },
  {
    version: "1.0",
    date: "7 września 2025",
    changes: [
      "Pierwsze wydanie aplikacji.",
      "Dodawanie i listowanie graczy.",
      "Rozgrywanie meczu z timerem i punktacją.",
      "Zapisywanie wyników w bazie danych Vercel Postgres.",
      "Strona ze statystykami graczy.",
    ],
  },
];
---

<Layout title="Historia Zmian (Changelog)">
    <main class="container mx-auto p-4 md:p-8">
        <header class="text-center mb-12">
            <h1 class="text-4xl md:text-5xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-teal-400 to-blue-500">
                Historia Zmian
            </h1>
            <a href="/" class="text-teal-400 hover:text-teal-300 mt-4 inline-block">&larr; Powrót do strony głównej</a>
        </header>

        <div class="bg-gray-800 text-white p-6 rounded-lg shadow-lg w-full max-w-4xl mx-auto">
            {changelog.map(entry => (
                <div class="mb-8 pb-8 border-b border-gray-700 last:border-b-0 last:pb-0 last:mb-0">
                    <h2 class="text-3xl font-bold text-teal-400">Wersja {entry.version}</h2>
                    <p class="text-sm text-gray-400 mb-4">{entry.date}</p>
                    <ul class="list-disc list-inside space-y-2">
                        {entry.changes.map(change => (
                            <li>{change}</li>
                        ))}
                    </ul>
                </div>
            ))}
        </div>
    </main>
</Layout>
